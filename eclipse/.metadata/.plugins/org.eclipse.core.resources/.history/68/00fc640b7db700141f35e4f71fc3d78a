package com.duskorion.testmod.handler;

import com.duskorion.testmod.block.TileEntityLoremIpsum;
import com.duskorion.testmod.client.gui.GuiLormIpsum;
import com.duskorion.testmod.reference.GuiIDs;

import net.minecraft.entity.player.EntityPlayer;
import net.minecraft.tileentity.TileEntity;
import net.minecraft.world.World;
import cpw.mods.fml.common.network.IGuiHandler;

public class GuiHandler implements IGuiHandler
{

	@Override
	public Object getServerGuiElement(int ID, EntityPlayer player, World world, int x, int y, int z) 
	{
		return null;
	}

	@Override
	public Object getClientGuiElement(int ID, EntityPlayer player, World world, int x, int y, int z) 
	{
		TileEntity entity = world.getTileEntity(x,y,z);
		
		switch(ID)
		{
			case GuiIDs.guiLoremIpsum:
				if(entity instanceof TileEntityLoremIpsum)
				{
					return new GuiLormIpsum(player.inventory, (TileEntityLoremIpsum) entity);
				}
			
				
		}
		
		
		
		return null;
	}

}
